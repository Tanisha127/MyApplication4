<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/gradient_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="4dp"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    android:layout_marginBottom="12dp"
                    android:background="#FFEB3B"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textSize="22sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/businessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Founder @ Your Business"
                    android:textSize="16sp"
                    android:textColor="#888888" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Fundamentals"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FFF59D"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="4dp"
                android:elevation="1dp"
                android:clipToPadding="false">

                <TextView
                    android:id="@+id/link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Startup School by YC"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Coursera: Business Strategy"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/link3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Harvard Business Online"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:autoLink="web" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marketing and Branding"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FFF59D"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="4dp"
                android:elevation="1dp"
                android:clipToPadding="false">

                <TextView
                    android:id="@+id/link4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Google Digital Garage"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/link5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• HubSpot Academy"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/link6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Neil Patel Blog"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:autoLink="web" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales and Customer Psycology"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FFF59D"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:elevation="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:elevation="1dp"
                android:backgroundTint="#FFFFFF"
                android:clipToPadding="false"
                android:layout_marginHorizontal="4dp">

                <TextView
                    android:id="@+id/link7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Salesforce Trailhead "
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/link8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• close.com Blog "
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/link9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Coursera : Art of sales"
                    android:textColor="#000000"
                    android:autoLink="web"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
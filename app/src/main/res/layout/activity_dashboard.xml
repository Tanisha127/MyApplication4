<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical">

    <!-- Logo and Search Bar Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Logo -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#FFD700"
            android:padding="2dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"
                android:contentDescription="Logo" />
        </FrameLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for products"
                android:padding="12dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:background="@android:color/white"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Categories Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:paddingStart="12dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="8dp">

        <!-- Category 1 -->
        <LinearLayout
            android:id="@+id/accessories_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/accessories"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accessories"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Category 2 -->
        <LinearLayout
            android:id="@+id/eatables_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/eatables"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eatables"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Category 3 -->
        <LinearLayout
            android:id="@+id/artcraft_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/artcraft"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Art &amp; Craft"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Category 4 -->
        <LinearLayout
            android:id="@+id/clothing_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/clothing"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothing"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Category 5 -->
        <LinearLayout
            android:id="@+id/books_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/books"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Category 6 -->
        <LinearLayout
            android:id="@+id/skincare_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/skincare"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skincare"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </GridLayout>
</LinearLayout>

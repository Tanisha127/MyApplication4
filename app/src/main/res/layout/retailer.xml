<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_margin="16dp">

        <!-- Retailer Login Heading -->
        <TextView
            android:id="@+id/login_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retailer Login"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/heading_background"
            android:layout_marginBottom="24dp" />

        <!-- Username -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="12dp" />

        <!-- DOB -->
        <EditText
            android:id="@+id/etDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:inputType="date"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="12dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="12dp" />

        <!-- Business Type Spinner -->
        <Spinner
            android:id="@+id/spinnerBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Unique ID -->
        <EditText
            android:id="@+id/etID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unique ID Number"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="12dp" />

        <!-- Institution -->
        <EditText
            android:id="@+id/etInstitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Institution Name"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="12dp" />

        <!-- Contact -->
        <EditText
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Details"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:layout_marginBottom="16dp" />


        <!-- Login Button -->
        <android.widget.Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@android:color/black"
            android:background="@drawable/button_yellow"
            android:padding="14dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"/>


        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#0000FF"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:gravity="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
